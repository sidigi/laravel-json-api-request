{
    "name": "sidigi/laravel-json-api-request",
    "description": "",
    "keywords": [
        "sidigi",
        "laravel-json-api-request"
    ],
    "homepage": "https://github.com/sidigi/laravel-json-api-request",
    "license": "MIT",
    "authors": [
        {
            "name": "Sidigi",
            "email": "sidigicoder@gmail.com",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mohammedmanssour/form-request-tester": "^1.0",
        "orchestra/testbench": "^6.2",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Sidigi\\LaravelJsonApiRequest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sidigi\\LaravelJsonApiRequest\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sidigi\\LaravelJsonApiRequest\\LaravelJsonApiRequestProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
